                    </apex:outputText>
                    <apex:outputText >
                        <tr class="tableRowAmount">
                            <td style="padding:6px">
                                <span style="">
                                    <apex:outputText value="Invoice Amount Due:"/>
                                </span>
                            </td>
                            <td style="text-align:right;padding:6px">
                                <span style="">
                                    <apex:outputText value="{0, Number, Currency}">
