                            <td style="padding:6px">
                                <span style="">
                                    <apex:outputText value="Sales Tax:"/>
                                </span>
                            </td>
                            <td style="text-align:right;padding:6px">
                                <span style="">
                                    <apex:outputText value="{0, Number, Currency}">
                                        <apex:param value="{!AcctSeed__Billing__c.AcctSeed__Sales_Tax2__c}" />
                                    </apex:outputText>
                                </span>
                                
                            </td>
